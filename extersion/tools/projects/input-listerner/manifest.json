{
  "manifest_version": 3,
  "name": "输入监听助手",
  "version": "0.0.2",  
  "description": "监听页面输入框的鼠标状态",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",  
    "tabs"      
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "host_permissions": [  
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}